{
  "name": "detect-in-app-browser",
  "version": "1.0.0",
  "description": "A TypeScript library to detect in-app browsers (WebView) and differentiate them from regular browsers",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "in-app-browser",
    "webview",
    "detection",
    "browser-detection",
    "mobile",
    "android",
    "ios",
    "gmail",
    "facebook",
    "instagram",
    "twitter",
    "custom-tabs",
    "typescript"
  ],
  "author": "Sunil D. <7609064+sunils07@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sunild7/detect-in-app-browser.git"
  },
  "bugs": {
    "url": "https://github.com/sunild7/detect-in-app-browser/issues"
  },
  "homepage": "https://github.com/sunild7/detect-in-app-browser#readme",
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

